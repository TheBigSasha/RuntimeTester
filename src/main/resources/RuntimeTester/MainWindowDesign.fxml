<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane fx:id="mainBorderView" stylesheets="mondea_dark.css" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="RuntimeTester.Controller">
    <bottom>
        <TabPane tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="BOTTOM_CENTER" prefHeight="160">
            <tabs>
                <Tab text="Custom">
                    <content>
                        <FlowPane alignment="CENTER" columnHalignment="CENTER" orientation="VERTICAL">
                            <children>
                                <ButtonBar fx:id="reflexive_button_area"/>
                            </children>
                        </FlowPane>
                    </content>
                </Tab>
                <Tab text="Settings">
                    <content>
                        <FlowPane alignment="CENTER" orientation="VERTICAL">
                            <children>
                                <Button fx:id="buttom_darkMode" text="Dark Theme"/>
                                <Label alignment="CENTER" contentDisplay="CENTER" text="Turbo Factor"
                                       textAlignment="CENTER"/>
                                <Slider fx:id="GC_TurboFactor" max="5000.0" value="50.0"/>
                                <CheckBox fx:id="GC_TurboMode" mnemonicParsing="false" text="Turbo Mode"/>
                            </children>
                        </FlowPane>


                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </bottom>
    <top>
        <HBox BorderPane.alignment="CENTER">
            <children>
                <Label text="Runtime Efficiency Tester">
                    <font>
                        <Font size="25.0"/>
                    </font>
                </Label>
                <ButtonBar>
                    <buttons>
                        <Button fx:id="GC_Reset" mnemonicParsing="false" text="Reset"/>
                        <Button fx:id="GC_Help" mnemonicParsing="false" text="Help"/>
                        <Button fx:id="GC_Refresh" mnemonicParsing="false" text="Refresh"/>
                    </buttons>
                </ButtonBar>
            </children>
        </HBox>
    </top>
    <right>

    </right>
</BorderPane>
